__global__ void mvm_input_order(float *x_out, int n_x_out, 
                                float *x_in, int n_x_in, 
                                unsigned int *ind) 
{
  int k, n;
  k = blockIdx.x * blockDim.x + threadIdx.x;
  n = blockIdx.y;
  if (k<n_x_in) {
    x_out[ind[k] + n*n_x_out] = x_in[k + n*n_x_in];
