@  with the kernel
<<ordering indices>>=
__global__ void ordering(unsigned int *mu, unsigned int *xi, int m, int n)
{
  int j1, j2, k;
  j1 = blockIdx.x * blockDim.x + threadIdx.x;
  j2 = blockIdx.y * blockDim.y + threadIdx.y;
  if ( (j1<n) && (j2<n) ) {
    k = j1*n + j2;
    mu[k] = (m+n)*(n-1)-j1*(m+n-1)-j2;
  }
  if ( (j1<m) && (j2<m) ) {
    k = j1*m + j2;
    xi[k] = (m+n)*(m+n-1) - (j1+1)*(m+n-1) - (j2+1);
  }
}
