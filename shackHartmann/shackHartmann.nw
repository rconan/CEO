                                                        valid_lenslet.m,
                                                        src->wavefront.M->f, 
							valid_actuator.m,
							threshold,
                                                        N_SIDE_LENSLET, n);
  valid_lenslet.set_filter();
  valid_lenslet.set_index();
  valid_actuator.set_filter();
} 
