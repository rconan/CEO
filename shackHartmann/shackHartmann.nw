void geometricShackHartmann::identify_valid_lenslet(source *src, float threshold) {
  int n;
  n = (int) sqrt(src->wavefront.N_PX/src->wavefront.N);
  n -= 1;
  n/= N_SIDE_LENSLET;
  dim3 blockDim(16,16);
  dim3 gridDim(N_SIDE_LENSLET/16+1,N_SIDE_LENSLET/16+1,N_WFS);
